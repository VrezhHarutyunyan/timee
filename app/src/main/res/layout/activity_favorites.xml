<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FavoritesActivity"

    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="100"
             >

        <!--android:layout_alignParentStart="true"-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarFavorites"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorApp"

            app:theme="@style/Theme.AppCompat.NoActionBar" ><!--color tools -->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Նախընտրելիները"
                android:textSize="20dp"
                android:textColor="@color/label"
                android:fontFamily=""
                />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textViewFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Դուք չունեք ոչ մի ակտիվ գործողություն 'Նախընտրելիները' էջի համար"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_below="@+id/textViewFavorites"
            android:background="@drawable/ic_no_activity"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_centerInParent="true"/>


</RelativeLayout>