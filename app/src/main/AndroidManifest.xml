<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cybertech2.timee">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Timee"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>


        <provider android:authorities="com.facebook.app.FacebookContentProvider275785176345144"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>

        <activity android:name=".LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label=""
            />
        <activity
            android:name=".NotificationsActivity"
            android:label=""
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".HiRatesActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AboutUsActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".FAQActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".FavoritesActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HistoryActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ArticleActivity"
            android:label=""
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".RegistrationActivity"></activity>
    </application>

</manifest>